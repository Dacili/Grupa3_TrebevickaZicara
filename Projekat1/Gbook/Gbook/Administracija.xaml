                <Grid/>

            </SplitView.Pane>
        </SplitView>
        <Pivot Title="Opcije">
            <PivotItem Header="Zaposleni">
                <Image HorizontalAlignment="Left" Height="100" Margin="149,84,0,0" VerticalAlignment="Top" Width="100" Source="Assets/Square150x150Logo.png"/>
            </PivotItem>

            <PivotItem Header="Izvjestaji">
                <Grid/>
            </PivotItem>
            <PivotItem Header="Pretrage"/>
        </Pivot>
        <Button Content="Dodaj zaposlenika" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="118,294,0,0" AllowDrop="True" Foreground="#FF1B211B" Background="#3354B61C" Width="179"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="737,155,0,0" Width="202"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Unesite ime i prezime zaposlenog:" VerticalAlignment="Top" Margin="728,128,0,0" RenderTransformOrigin="1.5,-6.95"/>
