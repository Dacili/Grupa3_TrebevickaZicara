        <Button Content="Ažuriraj" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="790,296,0,0"  Width="117"/>
        <Button Content="Obrisi" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="792,348,0,0" Width="114" BorderBrush="#FFC53C3C">
            <Button.Background>
                <SolidColorBrush Color="#33B92020" Opacity="1.5"/>
            </Button.Background>
        </Button>






    </Grid>
</Page>
